extends layout

block content
    form(method='POST', action='/articles/edit/'+data._id)
        .form-group
            label title
            input.form-control(name="title",type="text",value=data.title)
        .form-group
            label Author
            input.form-control(name="author",type="text",value=data.author)
        .form-group
            label Body
            input.form-control(name="body",type="text",value=data.body)
        br
        input.btn.btn-primary(type='submit',value='submit')